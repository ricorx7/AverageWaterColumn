<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" 
        x:Class="RTI.ShellView"
        xmlns:cal="http://www.caliburnproject.org"	
        Title="RTI - Average Water Column" Background="{StaticResource PulseBackgroundColor}" Width="800" Height="1000" >
    <ScrollViewer>
	<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
		
        <!--ContentControl Grid.Row="0" cal:View.Model="{Binding MenuVM}" HorizontalAlignment="Left" VerticalAlignment="Top"  /-->
        <ContentControl Grid.Row="1" x:Name="ActiveItem" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
	</ScrollViewer>
</Window>
